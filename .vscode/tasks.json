{
"version": "2.0.0",
"tasks": [
    {
    "label": "Compile GLSL Shader",
    "type": "shell",
    "command": "E:/Program Files (x86)/API/Vulkan/Bin/glslc.exe",
    "args": [
        "${file}",
        "-o",
        "${fileDirname}/${fileBasename}.spv"
    ],
    "group": {
        "kind": "build",
        "isDefault": true
    },
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
    },
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["absolute"],
        "pattern": {
        "regexp": "^(.*):(\\d+):(\\d+): (.*)$",
        "file": 1,
        "line": 2,
        "column": 3,
        "message": 4
        }
    }
    }
]
}
